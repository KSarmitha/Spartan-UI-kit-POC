{
  "name": "xv-ui-kit",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "xv-ui-kit",
  "prefix": "projects",
  "tags": [],
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "xv-ui-kit/ng-package.json",
        "tailwindConfig": "xv-ui-kit/tailwind.config.js"
      },
      "configurations": {
        "production": {
          "tsConfig": "xv-ui-kit/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "xv-ui-kit/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "xv-ui-kit/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    }
  }
}
